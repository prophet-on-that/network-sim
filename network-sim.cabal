name:                network-sim
version:             0.1
synopsis:            Simulating a network
description:         Please see README.md
homepage:            http://github.com/prophet-on-that/network-sim
license:             BSD3
license-file:        LICENSE
author:              Alex Bates
maintainer:          ard.bates@gmail.com
copyright:           2016 Alex Bates
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:
      NetworkSim.LinkLayer                     
    , NetworkSim.LinkLayer.SimpleNode
    , NetworkSim.LinkLayer.Repeater

  build-depends:
      base
    , bytestring == 0.10.*
    , stm == 2.4.*
    , exceptions == 0.8.*
    , vector == 0.10.*
    , async == 2.0.*
    , mtl == 2.2.*

  hs-source-dirs: src
  default-language:    Haskell2010
  ghc-options: -W

Test-Suite test-link-layer
  type: exitcode-stdio-1.0
  hs-source-dirs: src-exe/test/link-layer
  main-is: Main.hs
  default-language:    Haskell2010
  ghc-options: -W
  build-depends:
      base 
    , HUnit == 1.2.*

source-repository head
  type:     git
  location: https://github.com/githubuser/network-sim
